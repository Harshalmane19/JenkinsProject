pipeline {
    agent any

    stages {
        stage('Java Build') {
            steps {
                dir('hello_world') {
                    // Compile Java code
                    sh 'java Helloworld.java'
                }
            }
        }

        stage('Node.js Build') {
            steps {
                dir('hello_world') {
                    // No build needed for Node.js
                }
            }
        }

        stage('Execute Applications') {
            steps {
                dir('hello_world') {
                    // Run Java application
                    sh 'java Helloworld'
                }

                dir('hello_world') {
                    // Run Node.js application
                    sh 'node app.js'
                }
            }
        }
    }
}


