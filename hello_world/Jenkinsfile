pipeline {
    agent any

    environment {
        PATH = "$PATH:/usr/local/bin"
    }

    stages {
        stage('Java Build') {
            steps {
                dir('hello_world') {
                    // Compile Java code
                    sh 'java Helloworld.java'
                }
            }
        }

  

        stage('Execute Applications') {
            environment {
                NODEJS_HOME = tool 'NodeJS'
                PATH = "$NODEJS_HOME/bin:$PATH"
            }
            steps {

                dir('hello_world') {
                    // Run Node.js application
                    sh 'node app.js'
                }
            }
        }
    }
      tools {
        // Define Node.js tool
        nodejs 'NodeJS'
    }
}

